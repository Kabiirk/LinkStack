<!-- include header -->
<%-include('include/_header')%>
<!-- /include header -->

<div class="container">
    <h1 style="padding-top: 50px;padding-left: 20px;font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;">
        <i class="fas fa-caret-square-up"></i>
        Total Views:
        <span>
            <% if(profile.totalViews) { %>
                <%= profile.totalViews %>
            <% } else { %>
                0
            <% } %>
        </span>
    </h1>
</div>


 <!-- Main Site -->
 <main id="site-main">
    <div class="container">
       <div class="box-nav d-flex justify-between">
           <a href="/dashboard/add-link" class="border-shadow">
               <span class="text-gradient">New link <i class="fas fa-plus"></i></span>
           </a>

           <a href="/dashboard/handles" class="border-shadow">
            <span class="text-gradient">Handles <i class="fas fa-globe"></i></span>
           </a>

           <a href="/dashboard/appearance" class="border-shadow">
            <span class="text-gradient"> Appearance <i class="fas fa-user"></i></span>
           </a>
       </div>


      <!-- form handling -->
       <form action="/" method="POST">
           <table class="table">
               <thead class="thead-dark">
                   <tr>
                       <th>ID</th>
                       <th>Title</th>
                       <th>URL</th>
                       <!-- <th></th> -->
                       <!-- <th>Visibility</th> -->
                       <th>Action</th>
                   </tr>
               </thead>
               <tbody>
                <%-include('include/_show')%>
               </tbody>
           </table>
       </form>

       <% if(users.length==0){%>
            <tr style="text-align: center;">
        <h3>No links here . Please add a new link.</h3>
            </tr>
        <%}%>
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%-include('include/_footer')%>
<!-- /include footer -->
